<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    <bean id="alien1" class="com.ujjwal.Alien" scope="prototype">-->
    <bean id="alien1" class="com.ujjwal.Alien"> <!--By default scope is singleton and object is Loaded at class initialization time. In case of prototype object is created at getBean() time.-->
        <property name="age" value="21"></property> <!-- In case of primitive value we use value -->
        <property name="lap" ref="lap1"></property>      <!-- In case of Non Primitive value we use ref -->
    </bean>

    <bean id="lap1" class="com.ujjwal.Laptop">  <!-- This bean tag creates object without using id also but how can we make reference in App.java file ?-->
    </bean>


</beans>
